<%= form_for @micropost do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="flield">
		<%= f.text_area :content %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
		<span id="micropost_content_count"></span> characters remaining
		<%= character_count("micropost_content", "micropost_content_count") %>
	</div>
<% end %>